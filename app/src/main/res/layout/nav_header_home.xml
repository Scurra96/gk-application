<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/logo_color"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/relativeLayoutCircle"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_round_white">

        <TextView
            android:id="@+id/textView_firstLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_extra_bold"
            android:textColor="@color/logo_color"
            android:textSize="34dp" />

    </RelativeLayout>

    <TextView
        android:id="@id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_above="@id/textView_mailId"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_extra_bold"
        android:text="@string/nav_header_title" />

    <TextView
        android:id="@+id/textView_mailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/relativeLayoutCircle"
        android:layout_marginStart="15dp"
        android:textColor="@color/color_black"
        android:fontFamily="@font/poppins_extra_bold"
        android:text="@string/nav_header_subtitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:background="@color/color_black"/>

</RelativeLayout>